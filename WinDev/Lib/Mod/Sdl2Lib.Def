      major*: UInt8;
      minor: UInt8;
      patch: UInt8
    END;

    PRect* = POINTER [1] TO Rect;
    (* http://hg.libsdl.org/SDL/file/b9663c77f5c9/include/SDL_rect.h#l63 *)

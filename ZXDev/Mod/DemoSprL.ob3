  LOOP
    B.COLOR(B.Yellow); B.CLS; Laser2.PTBL(x, y, 1); B.COLOR(B.Green);
    B.AT(20, 20); B.PRSTR("x="); B.PRINT(x); B.PRSTR(", y="); B.PRINT(y);

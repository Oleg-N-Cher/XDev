MODULE PT3x0A;
IMPORT SYSTEM;

TYPE
  Melody* = SHORTINT;
  ADDRESS = INTEGER;

PROCEDURE Install* (module: ADDRESS); END Install;
PROCEDURE Play* ; END Play;
PROCEDURE Stop* ; END Stop;

PROCEDURE -TabAdr* (): SHORTINT "((int)&PT3x0A_TabAdr)";

END PT3x0A.


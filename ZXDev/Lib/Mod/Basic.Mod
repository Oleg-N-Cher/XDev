MODULE Basic; (** non-portable *)
(*-----------------------------------*)
(* Sinclair ZX Spectrum BASIC        *)
(* for Ofront & SDCC by Oleg N. Cher *)
(*  VEDAsoft Oberon Club, 2012-2013  *)
(*-----------------------------------*)
IMPORT SYSTEM;

CONST
	Black* = 0;
	Blue* = 1;
	Red* = 2;
	Magenta* = 3;
	Green* = 4;
	Cyan* = 5;
	Olive* = 6;
	LightGray* = 7;

	LightBlue* = Blue;
	LightRed* = Red;
	LightMagenta* = Magenta;
	LightGreen* = Green;
	LightCyan* = Cyan;
	Yellow* = Olive;
	White* = LightGray;

	On* = 1;
	Off* = 0;

	WaitAKey* = 0;
	
	RomFont* = 3D00H;

TYPE
	BYTE = INTEGER;
	CARDINAL = INTEGER;
	Color* = SHORTINT;
	Coords* = SHORTINT;
	TextCoords* = SHORTINT;
	Mode = SHORTINT;
	ADDRESS = LONGINT;

(* This procedures listed here for creating (by Ofront) symbol file .sym *)
PROCEDURE Init* ; END Init;
PROCEDURE BORDER* (color: BYTE); END BORDER;
PROCEDURE INK* (color: BYTE); END INK;
PROCEDURE PAPER* (color: BYTE); END PAPER;
PROCEDURE FLASH* (mode: Mode); END FLASH;
PROCEDURE BRIGHT* (mode: Mode); END BRIGHT;
PROCEDURE INVERSE* (mode: Mode); END INVERSE;
PROCEDURE OVER* (mode: Mode); END OVER;
PROCEDURE AT* (y, x: INTEGER); END AT;
PROCEDURE CLS* ; END CLS;
PROCEDURE PRSTR* (str: ARRAY OF CHAR); END PRSTR;
PROCEDURE PRCHAR* (ch: CHAR); END PRCHAR;
PROCEDURE PRUDG* (ch: CHAR); END PRUDG;
PROCEDURE PRDATA* ; END PRDATA;
PROCEDURE PRLN* ; END PRLN;
PROCEDURE PLOT* (x, y: INTEGER); END PLOT;
PROCEDURE POINT* (x, y: Coords): BYTE; BEGIN RETURN 0 END POINT;
PROCEDURE ATTR* (y, x: TextCoords): BYTE; BEGIN RETURN 0 END ATTR;
PROCEDURE DRAW* (x, y: INTEGER); END DRAW;
PROCEDURE CIRCLE* (cx, cy, radius: Coords); END CIRCLE;
PROCEDURE PRINT* (i: INTEGER); END PRINT;
PROCEDURE PRWORD* (i: CARDINAL); END PRWORD;
PROCEDURE SlowCircle* (cx, cy, radius: Coords); END SlowCircle;
PROCEDURE PEEK* (addr: ADDRESS): BYTE; BEGIN RETURN 0 END PEEK;
PROCEDURE PEEKW* (addr: ADDRESS): CARDINAL; BEGIN RETURN 0 END PEEKW;
PROCEDURE POKE* (addr: ADDRESS; value: BYTE); END POKE;
PROCEDURE POKEW* (addr: ADDRESS; value: CARDINAL); END POKEW;
PROCEDURE PORTIN* (port: ADDRESS): BYTE; BEGIN RETURN 0 END PORTIN;
PROCEDURE PORTOUT* (port: ADDRESS; value: BYTE); END PORTOUT;
PROCEDURE KeyPressed* (): BOOLEAN; BEGIN RETURN TRUE END KeyPressed;
PROCEDURE PAUSE* (ticks: CARDINAL); END PAUSE;
PROCEDURE RANDOMIZE* (seed: CARDINAL); END RANDOMIZE;
PROCEDURE RND* (min, max: CARDINAL): CARDINAL; BEGIN RETURN 0 END RND;
PROCEDURE SGN* (x: INTEGER): SHORTINT; BEGIN RETURN 0 END SGN;
PROCEDURE BEEP* (ms: CARDINAL; freq: INTEGER); END BEEP;
PROCEDURE FONT* (addr: ADDRESS); END FONT;
PROCEDURE UDG* (addr: ADDRESS); END UDG;
PROCEDURE INKEY* (): CHAR; END INKEY;
PROCEDURE DEFDATA* (title, size: INTEGER); END DEFDATA;
PROCEDURE DEFDATAREL* (title, size: INTEGER); END DEFDATAREL;
PROCEDURE READ* (addr: INTEGER): BYTE; BEGIN RETURN 0 END READ;
PROCEDURE DATA* (b: BYTE); END DATA;
PROCEDURE DATA1* (b: BYTE); END DATA1;
PROCEDURE DATA2* (b1,b2: BYTE); END DATA2;
PROCEDURE DATA3* (b1,b2,b3: BYTE); END DATA3;
